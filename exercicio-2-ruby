# Classe base Carro
class Carro
  def descrever
    "Este é um carro genérico."
  end
end

# Classe CarroEsportivo que herda de Carro
class CarroEsportivo < Carro
  def descrever
    "Este é um carro esportivo, ideal para alta velocidade e desempenho."
  end
end

# Classe CarroSedan que herda de Carro
class CarroSedan < Carro
  def descrever
    "Este é um carro sedan, confortável e espaçoso para famílias."
  end
end

# Criação de instâncias de cada classe
carro_generico = Carro.new
carro_esportivo = CarroEsportivo.new
carro_sedan = CarroSedan.new

# Chamada do método descrever para cada instância
puts carro_generico.descrever
puts carro_esportivo.descrever
puts carro_sedan.descrever
